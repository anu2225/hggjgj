Css
body {
    margin: 0;
    background: #f4f6f9;
    font-family: 'Segoe UI', sans-serif;
}

.app-container {
    display: flex;
}

.sidebar {
    width: 240px;
    min-height: 100vh;
    background: linear-gradient(180deg, #1e3c72, #2a5298);
    padding: 20px;
}

.sidebar .logo {
    color: white;
    margin-bottom: 20px;
}

.sidebar a {
    display: block;
    color: #e0e0e0;
    padding: 10px;
    margin-bottom: 8px;
    border-radius: 6px;
    text-decoration: none;
}

.sidebar a:hover {
    background: rgba(255,255,255,0.15);
    color: white;
}

.content {
    padding: 25px;
    width: 100%;
}

.card {
    border-radius: 12px;
    box-shadow: 0 6px 16px rgba(0,0,0,0.15);
}

.dash-card {
    color: white;
    text-align: center;
    padding: 30px;
    margin-bottom: 20px;
}

.dash-card i {
    font-size: 40px;
}

