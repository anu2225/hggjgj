Csharp
public class ProductVM
{
    public string Name { get; set; }
    public string Desc { get; set; }
    public decimal Price { get; set; }
    public string Image { get; set; }
}
5Ô∏è‚É£ CONTROLLERS
HomeController.cs
Copy code
Csharp
using Microsoft.AspNetCore.Mvc;
using System.Collections.Generic;

public class HomeController : Controller
{
    public IActionResult Index() => View();

    public IActionResult Menu()
    {
        var list = new List<ProductVM>
        {
            new(){Name="Green Salad",Desc="Fresh healthy salad",Price=12,Image="salad1.jpg"},
            new(){Name="Veg Salad",Desc="Mixed vegetables",Price=18,Image="salad2.jpg"},
            new(){Name="Clover Salad",Desc="Light meal",Price=16,Image="salad1.jpg"},
            new(){Name="Chicken Salad",Desc="Protein rich",Price=25,Image="chicken.jpg"}
        };
        return View(list);
    }
}
