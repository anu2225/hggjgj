@model List<ProductVM>

<div class="cards">
@foreach(var p in Model)
{
    <div class="card">
        <img src="~/images/@p.Image" />
        <h3>@p.Name</h3>
        <p>@p.Desc</p>
        <span>$@p.Price</span>
        <a href="/Cart" class="add">+</a>
    </div>
}
</div>
